/* pages/prePostDetail/prePostDetail.wxss */
.container{
  width: 690rpx;
  padding: 30rpx;
}

.headLine{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.headLine view:last-child{
  display: flex;
  width: fit-content;
}
.headLine view:last-child view{
  margin-left: 20rpx;
}

.main{
  width: 100%;
  position: relative;
}

.departOpt{
  width: 100%;
  height: fit-content;
  padding: 10rpx 0;
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
  border-top: 1px blue solid;
  border-bottom: 1px blue solid;
}

.author{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.author image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
}
.author view:last-child{
  position: relative;
  height: fit-content;
  top: 50%;
  transform: translateY(-50%);
}
.authorName{
  width: 420rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.authorName text:last-child{
  font-size: 25rpx;
}
scroll-view{
  width: 100%;
  position: relative;
}

.commentItem{
  border-bottom: 1px solid rgb(187, 184, 184);
}

.lastBar{
  width: 100%;
  text-align: center;
  margin: 20rpx 0;
}

.postTxt{
  width: 100%;
  height: 200rpx;
  display: flex;
}
.postTxt textarea{
  width: 70%;
  height: 200rpx;
  background-color: red;
}

.postTxt view{
  width: 30%;
  height: 200rpx;
}
.postTxt view image{
  width: 100%;
}

.somebtn{
  width: 100%;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.somebtn view{
  text-align: center;
  background-color: rgb(102, 102, 185);
  margin: 20rpx 0 10rpx 0;
}