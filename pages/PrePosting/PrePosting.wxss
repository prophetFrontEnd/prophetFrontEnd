.page{
    height: 100%;
    width: 100%;
}
.top{
    padding-top: 15%;
    flex-direction:row;
    display: flex;
    height:10%;
    justify-content: space-between;
    align-items: center;
}
.backbutton{
    display:flexbox;
    align-items: center;
    justify-content: space-between;
}
.backbtn{
    color: black;
    background-color: transparent;
    border: none;
    display: flex;
    align-items: center;
    justify-content:flex-start;
}
.backbtn::after{
    border: none;
}
.imgbtn{
    width: 46rpx;
    height: 46rpx;
}
.fatie{
    font-size: 18px;
    display: flex;
    justify-content: center;
    padding-right: 13px;
}
.send{
    display: flex;
    padding-right: 10px;
}
.sendbtn{
    font-size: 18px;
    color: black;
    background-color: transparent;
    border: none;
    display: flex;
    align-items: center;
    height: 40px;
}

.question-form {
    margin-left: 35rpx;
    margin-right: 35rpx;
}

.question-input-area {
    border: 1rpx solid #504c4c;
    border-radius: 10rpx;
}

.question-title-wrap {
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #504c4c;
    margin: 5rpx 30rpx;
    padding: 20rpx 0;
}
.weui-textarea{
    display: flex;
    margin: 5rpx 30rpx;
    padding: 20rpx 0;
}
.question-title {
    flex: 1;
}

.weui-textarea-counter, .title-input-counter {
    font-size: 14px;
    padding-left: 10rpx;
}

.weui-cell::before, .weui-cells::before, .weui-cell::after, .weui-cells::after {
    border: none;
}



.choose{
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 10px;
    flex-direction: column;
}
.choosebtn{
    background-color: transparent;

    border: none;
    display: flex;
    align-items: center;
    justify-content:flex-start;
    font-size: 20px;
}
.choosebtn::after{
    border: none;
}
.chooseimg{
    width: 50px;
    height: 50px;
}
.upload{
    height: 80px;
    width: 80%;
    justify-content: space-around;
    display: flex;
    align-items: center;
    border: 1rpx solid  #504c4c;
    border-radius: 5px;
    margin-bottom: 15px;
}
.uploadimg{
    width: 70px;
    height: 70px;
}
.section{
    width: 50%;
}

.picker{
  padding: 26rpx;
}
.word-input{
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid #504c4c;
    margin: 15rpx 25rpx;
    padding: 20rpx 12rpx;
}

.radio{
    display: flex;
    margin-top: 3rpx;
    font-size: 20px;
    transform: scale(0.75);
}