/* pages/prePostDetail/prePostDetail.wxss */
.container{
  width: 690rpx;
  padding: 30rpx;
}

.headLine{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.main{
  width: 100%;
  position: relative;
}

.author{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.author image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
}
.author view:last-child{
  position: relative;
  height: fit-content;
  top: 50%;
  transform: translateY(-50%);
}
.authorName{
  width: 420rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.authorName text:last-child{
  font-size: 25rpx;
}
.shareTxt{
  position: relative;
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}
.shareTxt image{
  width: 200rpx;
}
.shareTxt textarea{
  width: 480rpx;
  height: fit-content;
  margin-left: 10rpx;
}

.sourceTxt{
  width: 100%;
  position: relative;
  background-color: rgb(201, 194, 194);
}

.sourceTxt view:first-child{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.sourceTxt textarea{
  width: 100%;
  height: 200rpx;
  background-color: yellow;
  margin: 10rpx 0;
}

.somebtn{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  justify-content: flex-end;
}
.somebtn view{
  width: fit-content;
  text-align: center;
  background-color: rgb(102, 102, 185);
  margin-right: 15rpx;
  padding: 10rpx;
}