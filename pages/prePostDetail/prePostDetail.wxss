/* pages/prePostDetail/prePostDetail.wxss */
.container{
  width: 690rpx;
  padding: 30rpx;
}

.headLine{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.main{
  width: 100%;
  position: relative;
}

.author{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.author image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
}
.author view:last-child{
  position: relative;
  height: fit-content;
  top: 50%;
  transform: translateY(-50%);
}
.authorName{
  width: 420rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.authorName text:last-child{
  font-size: 25rpx;
}
scroll-view{
  width: 100%;
  position: relative;
}
.postTxt{
  width: 100%;
  
}
.postTxt textarea{
  width: 100%;
  height: 1000rpx;
  background-color: red;
}

.postTxt view{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 200rpx;
  margin: 10rpx 0 20rpx  0;
}
.postTxt view image{
  width: 30%;
}

.hotDegree, .somebtn{
  width: 100%;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.somebtn view{
  width: 30%;
  text-align: center;
  background-color: rgb(102, 102, 185);
  margin: 20rpx 0 10rpx 0;
}